# ===================================
# Configuración de Bandit
# Análisis de Seguridad para Python
# ===================================

[bandit]
# Directorios a excluir del análisis
exclude_dirs = 
    /test,
    /tests,
    */migrations/*,
    */venv/*,
    */env/*,
    */__pycache__/*,
    */staticfiles/*

# Nivel de severidad mínimo a reportar
# LOW, MEDIUM, HIGH
skips = 

# Tests específicos a ejecutar
# Si está vacío, ejecuta todos
tests = 

# ===================================
# MÉTRICA: Vulnerabilidades de Seguridad
# ===================================

# B101: Test for use of assert (común en tests)
# B110: Test for use of try_except_pass
# B201: Test for flask debug = true
# B301: Pickle usage
# B302: marshal usage
# B303: MD5 or SHA1 usage
# B304: Use of insecure cipher
# B305: Use of insecure cipher mode
# B306: Use of insecure and deprecated function
# B307: Use of insecure function eval
# B308: Use of mark_safe
# B310: Audit url open for permitted schemes
# B311: Random module usage
# B312: Telnet usage
# B313: XML bad cElementTree
# B314: XML bad ElementTree
# B315: XML bad expatreader
# B316: XML bad expatbuilder
# B317: XML bad sax
# B318: XML bad minidom
# B319: XML bad pulldom
# B320: XML bad etree
# B321: FTP usage
# B322: Input usage
# B323: unverified context usage
# B324: Insecure hash function usage
# B325: Insecure random module usage
# B401-B413: Import checks
# B501-B509: Cryptography checks
# B601-B612: Shell injection
# B701-B703: SQL injection

# Excluir tests específicos que generan falsos positivos en Django
# B308: mark_safe es seguro si se usa correctamente en Django
# B703: Django ORM previene SQL injection
skips = B101

[bandit.any_other_function_with_shell_equals_true]
# Funciones que no son consideradas peligrosas
no_shell = 
    os.execl,
    os.execle,
    os.execlp,
    os.execlpe,
    os.execv,
    os.execve,
    os.execvp,
    os.execvpe,
    os.spawnl,
    os.spawnle,
    os.spawnlp,
    os.spawnlpe,
    os.spawnv,
    os.spawnve,
    os.spawnvp,
    os.spawnvpe,
    os.startfile

shell = 
    os.system,
    os.popen,
    os.popen2,
    os.popen3,
    os.popen4,
    popen2.popen2,
    popen2.popen3,
    popen2.popen4,
    popen2.Popen3,
    popen2.Popen4,
    commands.getoutput,
    commands.getstatusoutput

subprocess = 
    subprocess.Popen,
    subprocess.call,
    subprocess.check_call,
    subprocess.check_output,
    subprocess.run
