[MASTER]
# Archivos o directorios a ignorar
ignore=migrations,__pycache__,venv,env,staticfiles,.git
ignore-patterns=test_.*\\.py,.*_test\\.py

# Usar múltiples procesos para acelerar Pylint
jobs=4

# Cargar el plugin de Django
load-plugins=pylint_django

[MESSAGES CONTROL]
# Deshabilitar mensajes específicos que no son relevantes para Django
disable=
    # Demasiado restrictivo para Django
    too-few-public-methods,
    # Django tiene muchos atributos en modelos
    too-many-instance-attributes,
    # Común en vistas de Django
    too-many-arguments,
    # No es un problema real
    missing-module-docstring,
    # Django usa mucho esto
    too-many-ancestors,
    # Común en tests
    duplicate-code,
    # Advertencias que son demasiado estrictas
    fixme,
    # No necesario en Python 3
    no-else-return,
    # Demasiado estricto
    line-too-long

# Habilitar mensajes específicos para análisis de calidad
enable=
    useless-suppression,
    deprecated-pragma,
    use-symbolic-message-instead

[REPORTS]
# Configurar formato de salida
output-format=text
reports=yes
evaluation=10.0 - ((float(5 * error + warning + refactor + convention) / statement) * 10)
score=yes

[BASIC]
# Convenciones de nombres para Python/Django
good-names=i,j,k,ex,Run,_,id,pk

# Expresiones regulares para nombres
function-rgx=[a-z_][a-z0-9_]{2,50}$
variable-rgx=[a-z_][a-z0-9_]{2,50}$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
attr-rgx=[a-z_][a-z0-9_]{2,50}$
argument-rgx=[a-z_][a-z0-9_]{2,50}$
class-rgx=[A-Z_][a-zA-Z0-9]+$
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$

[FORMAT]
# Número máximo de caracteres por línea
max-line-length=120

# Máximo de líneas en un módulo
max-module-lines=1000

# String de indentación
indent-string='    '

[DESIGN]
# ===================================
# MÉTRICA: Complejidad del Código
# ===================================

# Complejidad ciclomática máxima para una función
# Basado en McCabe (1976): 1-10 simple, 11-20 moderado, 21+ complejo
max-complexity=10

# Número máximo de argumentos para función/método
max-args=7

# Número máximo de atributos para una clase
max-attributes=12

# Número máximo de valores de retorno para función
max-returns=6

# Número máximo de ramas (if, for, while, etc.)
max-branches=15

# Número máximo de variables locales
max-locals=20

# Número máximo de sentencias en función/método
max-statements=60

# Mínimo de métodos públicos para una clase
min-public-methods=1

# Máximo de métodos públicos para una clase
max-public-methods=25

# Máximo de padres para una clase
max-parents=7

[SIMILARITIES]
# ===================================
# MÉTRICA: Duplicación y Redundancias
# ===================================

# Mínimo de líneas similares para detectar duplicación
min-similarity-lines=6

# Ignorar comentarios al calcular similitudes
ignore-comments=yes

# Ignorar docstrings al calcular similitudes
ignore-docstrings=yes

# Ignorar imports al calcular similitudes
ignore-imports=yes

# Ignorar firmas de funciones
ignore-signatures=yes

[VARIABLES]
# Variables que pueden ser redefinidas
allowed-redefined-builtins=id

# Variables dummy permitidas
dummy-variables-rgx=_+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|dummy|^ignored_|^unused_

[CLASSES]
# Lista de nombres de métodos válidos
valid-classmethod-first-arg=cls
valid-metaclass-classmethod-first-arg=mcs

# Atributos que definen una clase
defining-attr-methods=__init__,__new__,setUp

[IMPORTS]
# Permitir imports de wildcard
allow-wildcard-with-all=no

[EXCEPTIONS]
# Excepciones que pueden ser capturadas de forma amplia
overgeneral-exceptions=builtins.BaseException,builtins.Exception

[DJANGO]
# Configuración específica de Django
django-settings-module=config.settings
